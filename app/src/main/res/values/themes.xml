<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BangWool" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>


    <!--   NumberPicker 설정 -->
    <style name="numberPickerCustomSize">
        <!-- Number Picker 글자 크기 조절  -->
        <item name="android:textSize">44sp</item>
    </style>

    <style name="NumberPickerTextAppearance">
        <item name="android:textSize">48dp</item>
        <item name="android:textColorPrimary">@color/gray_300</item>
    </style>

    <style name="NumberPickerTextAppearance.Unselected">
        <item name="android:textSize">48dp</item>
        <item name="android:textColor">@color/gray_200</item>
    </style>


    <!--    TextInputLayout error message setting-->
    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">@dimen/text_size_body5</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">@color/androidDefault</item>
        <item name="android:textColor">@color/androidDefault</item>
    </style>

    <style name="TextInputLayoutErrorCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeErrorColor">@color/androidDefault</item>
        <item name="android:textColor">@color/androidDefault</item>
    </style>

    <style name="ThemeOverlay.NumberPicker" parent="Theme.AppCompat">
        <item name="colorControlNormal">@null</item>
    </style>

    <!--  스플래시 테마 -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="RoundedDialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- 다이얼로그의 배경을 둥글게 처리 -->
        <item name="android:windowBackground">@drawable/dialog_delete_layout</item>
    </style>

    <!--  바텀 네비게이션 글꼴  -->
    <style name="BottomNavigationTheme">
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <!--    태현    -->

    <!--    현희    -->

    <!--    지원    -->
    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">@dimen/text_size_body2</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>
    <!--    현준    -->


</resources>