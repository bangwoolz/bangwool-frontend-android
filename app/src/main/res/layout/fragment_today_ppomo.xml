<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TodayPpomoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/top_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_setting_adjust_outline"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 뽀모"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="@dimen/text_size_body2"
            android:textColor="@color/gray_800"/>

        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_x"/>
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/todayppomo_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ppomoTree_iv"
                android:layout_width="173dp"
                android:layout_height="270dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/tree"
                android:layout_marginHorizontal="66dp"/>

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="294dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/ppomoCount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘은 토마토를 30개나 모았어요!"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="@dimen/text_size_body2"
                android:textColor="#000000"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todayppomo_recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="376dp"
                android:layout_marginLeft="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>