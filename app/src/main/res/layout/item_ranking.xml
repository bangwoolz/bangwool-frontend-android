<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/item_ranking_ll"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_ranking_all"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ranking_item_tv_rank"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/gray_600"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="@dimen/text_size_body2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/ranking_item_cv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="9dp"
            android:backgroundTint="@color/gray_300"
            app:cardCornerRadius="52dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/happy_tomato" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ranking_item_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_weight="1"
            android:text="방울이"
            android:textColor="@color/gray_700"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="@dimen/text_size_body4" />

        <TextView
            android:id="@+id/ranking_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="30 Min"
            android:textColor="@color/primary"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="@dimen/text_size_body3" />

    </LinearLayout>

<!--    <View-->
<!--        android:id="@+id/dividing_line"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2dp"-->
<!--        android:layout_marginBottom="2dp"-->
<!--        android:background="@color/gray_100"/>-->
</LinearLayout>


