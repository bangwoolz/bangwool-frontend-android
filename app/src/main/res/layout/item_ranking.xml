<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ranking_item_tv_rank"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/gray_600"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ranking_item_cv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="9dp"
        android:backgroundTint="@color/gray_300"
        app:cardCornerRadius="52dp">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/splash_image" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ranking_item_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:layout_weight="1"
        android:text="방울이"
        android:textColor="@color/gray_700"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ranking_item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="30 Min"
        android:textColor="@color/primary"
        android:textSize="18sp" />

</LinearLayout>