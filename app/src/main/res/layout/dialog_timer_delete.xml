<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_cl"
    android:layout_width="wrap_content"
    android:layout_height="192dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_delete_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="32dp"
        android:text="타이머 삭제"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="@color/gray_700"
        android:textSize="@dimen/text_size_body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="76dp"
        android:text="taskName 타이머를 삭제하겠습니까?"
        android:textColor="@color/gray_900"
        android:textSize="@dimen/text_size_body4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_btn"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/long_normal_btn"
        android:backgroundTint="@color/gray_100"
        android:fontFamily="@font/pretendard_medium"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:text="취소"
        android:textColor="@color/gray_600"
        android:textSize="@dimen/text_size_body4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_btn"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/long_normal_btn"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/pretendard_medium"
        android:paddingHorizontal="32dp"
        android:paddingVertical="14dp"
        android:text="확인"
        android:textColor="@color/gray_0"
        android:textSize="@dimen/text_size_body4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>