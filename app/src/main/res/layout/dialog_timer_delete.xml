<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/dialog_cl"
    android:background="@drawable/dialog_delete_layout"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:text="타이머 삭제"
        android:textColor="@color/gray_700"
        android:textSize="@dimen/text_size_body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="76dp"
        android:text="taskName 타이머를 삭제하겠습니까?"
        android:textColor="@color/gray_900"
        android:textSize="@dimen/text_size_body4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_btn"
            android:layout_marginRight="8dp"
            android:background="@drawable/long_normal_btn"
            android:backgroundTint="@color/gray_100"
            android:paddingHorizontal="32dp"
            android:paddingVertical="14dp"
            android:text="취소"
            android:textColor="@color/gray_600" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:id="@+id/delete_btn"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/long_normal_btn"
            android:backgroundTint="@color/primary"
            android:paddingHorizontal="32dp"
            android:paddingVertical="14dp"
            android:text="삭제"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>